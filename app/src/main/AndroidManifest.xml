<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.karuna.pages">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KarunaPages">

        <activity android:name=".ui.questions.answers.AnswersActivity"
            android:parentActivityName=".ui.questions.QuestionsActivity"
            android:label="Answers"/>
        <activity
            android:name=".ui.questions.QuestionsActivity"
            android:label="Questions"
            android:parentActivityName=".ui.home.HomeActivity" />
        <activity
            android:name=".ui.listings.ListingsActivity"
            android:label="Listings"
            android:parentActivityName=".ui.home.HomeActivity" />
        <activity
            android:name=".ui.mylistings.MyListingsActivity"
            android:label="My Listings"
            android:parentActivityName=".ui.home.HomeActivity" />
        <activity
            android:name=".ui.reviews.ReviewsActivity"
            android:label="Reviews"
            android:parentActivityName=".ui.home.HomeActivity" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".ui.home.HomeActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.ui.register.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".ui.login.ui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.ui.login.LoginActivity"
            android:label="Login" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:label="@string/app_name" />
    </application>

</manifest>